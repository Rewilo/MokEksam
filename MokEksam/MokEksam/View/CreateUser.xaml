<Page
    x:Class="MokEksam.View.CreateUser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="PageRoot"
    
    mc:Ignorable="d">
    
    <!--Page Content-->
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <!-- Responsive design -->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="720" />
                    </VisualState.StateTriggers>
                    
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <TextBox x:Name="PickUserNameTextbox" HorizontalAlignment="Left" Margin="376,360,0,0" Grid.Row="2" 
                 TextWrapping="Wrap" PlaceholderText="Vælg Brugernavn" VerticalAlignment="Top" Height="25" Width="139"/>

        <TextBlock x:Name="PickUserNameTextBlock" HorizontalAlignment="Left" Margin="164,36,0,0" Grid.Row="2" 
                   TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="128" Height="27"/>

        <TextBox x:Name="PickPasswordTextbox" HorizontalAlignment="Left" Margin="530,165,0,0" Grid.Row="2" 
                 TextWrapping="Wrap" PlaceholderText="Vælg password" VerticalAlignment="Top" Height="25" Width="138"/>

        <TextBlock x:Name="PickPasswordTextBlock" HorizontalAlignment="Left" Margin="165,74,0,0" Grid.Row="2" 
                   TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="128" Height="27"/>

        <TextBlock x:Name="textBlock_Copy1" HorizontalAlignment="Left" Margin="163,116,0,0" Grid.Row="2" 
                   TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="128" Height="27"/>

        <TextBox x:Name="textBox_Copy1" HorizontalAlignment="Left" Margin="511,268,0,0" Grid.Row="2" 
                 TextWrapping="Wrap" PlaceholderText="Bekræft password" VerticalAlignment="Top" Height="25" Width="139"/>

        <Button x:Name="button" Content="Opret" HorizontalAlignment="Left" Margin="296,595,0,0" 
                Grid.Row="2" VerticalAlignment="Top"/>

        <TextBox x:Name="textBox_Copy2" HorizontalAlignment="Left" Margin="726,410,0,0" Grid.Row="2" 
                 TextWrapping="Wrap" PlaceholderText="Vælg Email" VerticalAlignment="Top" Height="25" Width="139"/>

        <TextBlock x:Name="textBlock_Copy2" HorizontalAlignment="Left" Margin="164,158,0,0" Grid.Row="2" 
                   TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="128" Height="27"/>
    </Grid>
</Page>
